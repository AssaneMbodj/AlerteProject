@model IEnumerable<WebApp.Models.Alerte>
@using System.Security.Claims

@{
    ViewData["Title"] = "Historique de vos Alertes";
}

<h1 class="mt-4"> Historique de vos Alertes</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var alerte in Model.Where(a => a.UtilisateurId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
            {
                <tr>
                    <td>@alerte.Id</td>
                    <td>@alerte.Titre</td>
                    <td>@alerte.Description</td>
                    <td>@alerte.DateCreation.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@alerte.Id"> Voir</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@alerte.Id"> Modifier</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@alerte.Id"> Supprimer</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Aucune alerte disponible.</td>
            </tr>
        }
    </tbody>
</table>
