@model IEnumerable<WebApp.Models.Alerte>

@{
    ViewData["Title"] = "Liste des Alertes";
}

<h1 class="mt-4"> Liste des Alertes</h1>

<a class="btn btn-success mb-3" asp-controller="Alertes" asp-action="Create"> Ajouter une Alerte</a>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var alerte in Model)
            {
                <tr>
                    <td>@alerte.Id</td>
                    <td>@alerte.Titre</td>
                    <td>@alerte.Description</td>
                    <td>@alerte.DateCreation.ToString("dd/MM/yyyy")</td>
                    <td>@alerte.UtilisateurId</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@alerte.Id"> Voir</a>
                        
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Aucune alerte disponible.</td>
            </tr>
        }
    </tbody>
</table>
